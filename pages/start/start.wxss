/* pages/start/start.wxss */

swiper {
  width: 100vw;
  height: 100vh;
}

image {
  width: 100%;
  height: 100%;
}

.dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 50px;
  display: flex;
  justify-content: center;
  transition: all 0.6s;
}

.dot {
  width: 14rpx;
  height: 14rpx;
  background: cyan;
  border-radius: 50%;
  margin: 0 8rpx;
  opacity: 0.5;
}

.dot.active {
  opacity: 1;
}
