.container {
  background-color: #f2f2f2;
  height: 100vh;
}

.no-goods {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 330rpx;
  font-size: 28rpx;
  color: #aaa;
  background: url(https://cdn.it120.cc/images/weappshop/icon-cart.png) no-repeat
    center 205rpx;
  background-size: 100rpx auto;
}

.no-goods button {
  margin-top: 30rpx;
  padding: 10rpx 100rpx;
}

.goods .header {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
}

.goods .header .edit {
  color: #aaa;
}

.goods .goods-list {
  background-color: #fff;
}

.goods .goods-list .goods-item {
  background: url(https://cdn.it120.cc/images/weappshop/gou.png) no-repeat 30rpx
    center;
  background-size: 40rpx auto;
  padding-left: 100rpx;
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.goods .goods-list .goods-item:not(:last-child) {
  border-bottom: 1rpx solid #ccc;
}

.goods .goods-list .goods-item.active {
  background: url(https://cdn.it120.cc/images/weappshop/gou-red.png) no-repeat
    30rpx center;
  background-size: 40rpx auto;
}

.goods .img-box {
  width: 160rpx;
  height: 160rpx;
  background-color: #d8d8d8;
}

.goods .img-box image {
  width: 160rpx;
  height: 160rpx;
}

.goods .info {
  font-size: 26rpx;
  padding-left: 50rpx;
  padding-right: 20rpx;
  height: 100%;
  flex: 1;
}

.goods .info .price-num {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 50rpx;
}

.goods .price-num .num {
  display: flex;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
}

.goods .num .jian {
  width: 48rpx;
  height: 100%;
  border-left: 1px solid #ccc;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  border-top-left-radius: 6rpx;
  border-bottom-left-radius: 6rpx;
}
.goods .num input {
  width: 68rpx;
  height: 48rpx;
  border: 1rpx solid #ccc;
  min-height: 48rpx;
}

.goods .num .jia {
  width: 48rpx;
  height: 100%;
  border-right: 1px solid #ccc;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  border-top-right-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
}

.total {
  display: flex;
  font-size: 26rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  line-height: 100rpx;
  justify-content: space-between;
  align-items: stretch;
  background: url(https://cdn.it120.cc/images/weappshop/gou.png) no-repeat 30rpx
    center;
  background-size: 40rpx auto;
  padding-left: 100rpx;
}

.total .total-btn {
  background-color: red;
  width: 260rpx;
  color: #fff;
  text-align: center;
}

.total .total-text {
  color: red;
}

.total.active {
  background: url(https://cdn.it120.cc/images/weappshop/gou-red.png) no-repeat
    30rpx center;
  background-size: 40rpx auto;
}
